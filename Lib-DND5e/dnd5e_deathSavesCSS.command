input[type="checkbox"] {
  -webkit-appearance: none;
  width: 30px;
  height: 30px;
  background-color: #eeeeee;
}

input[type="checkbox"].fail {
  outline: double red;
}

input[type="checkbox"].pass {
  outline: double green;
}

div.title {
	font-weight: bold;
}

.radio {
  display: flex;
  align-items: center;
  height: 22px;
  width: 125px;
  margin: 5px auto;
}